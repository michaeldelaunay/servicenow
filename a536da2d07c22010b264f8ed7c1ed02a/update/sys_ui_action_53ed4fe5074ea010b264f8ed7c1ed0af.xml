        <order>100</order>
        <script><![CDATA[action.setRedirectURL(current);

var code = new GlideRecord('x_297381_fffun_now_mind_code');
code.addQuery('game', current.sys_id);
code.query();

if (code.next()) {
    if (code.pawn_1 == current.pawn_1 &&
        code.pawn_2 == current.pawn_2 &&
        code.pawn_3 == current.pawn_3 &&
        code.pawn_4 == current.pawn_4)
        current.state = 'won';
    else {
        var count = new GlideAggregate('x_297381_fffun_now_mind_guess');
        count.addQuery('game', current.sys_id);
        count.addAggregate('count');
        count.query();
        var result = 0;
        if (count.next()) result = count.getAggregate('COUNT');
        if (result == 11) current.state = 'lost';
    }
}

current.update();

if (!current.isActionAborted())
    action.setRedirectURL(current);]]></script>
