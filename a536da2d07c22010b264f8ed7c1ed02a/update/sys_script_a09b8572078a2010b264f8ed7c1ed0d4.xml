        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var colours = ["red", "blue", "green", "yellow", "orange", "pink", "grey", "purple"];
    var code = [];
    var codeString = code.join();
    var pawn;

    var i = 0;

    while (code.length < 4 && i < 100) {
        pawn = Math.floor(Math.random() * 10);
        if (pawn < 8 && codeString.indexOf(pawn.toString())==-1) code.push(pawn);
        codeString = code.join();
		i+=1;
    }

    var newCode = new GlideRecord('x_297381_fffun_now_mind_code');

    newCode.initialize();
    newCode.game = current.sys_id;
    newCode.pawn_1 = colours[code[0]];
    newCode.pawn_2 = colours[code[1]];
    newCode.pawn_3 = colours[code[2]];
    newCode.pawn_4 = colours[code[3]];
    newCode.insert();

})(current, previous);]]></script>
